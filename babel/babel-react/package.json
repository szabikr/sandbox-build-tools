{
  "name": "babel-react",
  "version": "1.0.0",
  "description": "let's see how does babel treat react",
  "main": "index.js",
  "repository": "https://github.com/szabikr/sandbox-build-tools",
  "author": "szabikr",
  "license": "MIT",
  "scripts": {
    "compile:hello-world": "babel src/hello-world.js --out-file lib/index.js --plugins=@babel/plugin-transform-react-jsx",
    "compile:todo-list": "babel src/todo-list.js --out-file lib/index.js --presets=@babel/preset-env,@babel/preset-react",
    "cleanup": "rm -rf lib"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.2",
    "@babel/plugin-transform-react-jsx": "^7.19.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "prettier": "^2.7.1"
  }
}
